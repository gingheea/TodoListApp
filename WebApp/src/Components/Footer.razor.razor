.footer-container {
    background-color: #111;
    color: white;
    padding: 40px 0;
    text-align: center;
    font-family: system-ui, sans-serif;
}

.footer-content {
    max-width: 1000px;
    margin: 0 auto;
}

.footer-brand {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin-bottom: 20px;
}

.footer-brand-icon {
    color: #00c853;
}

.footer-nav {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 20px;
}

.footer-link span {
    color: #ccc;
    transition: color 0.3s;
}

.footer-link span:hover {
    color: #fff;
}

.footer-social {
    display: flex;
    justify-content: center;
    gap: 16px;
    margin-bottom: 20px;
}

.footer-social-link {
    color: #ccc;
    transition: color 0.3s;
}

.footer-social-link:hover {
    color: #00c853;
}

.footer-bottom {
    border-top: 1px solid #333;
    padding-top: 20px;
    font-size: 14px;
    color: #777;
}

.footer-legal {
    margin-top: 10px;
    display: flex;
    justify-content: center;
    gap: 20px;
}

.footer-legal-link span:hover {
    color: #fff;
}
