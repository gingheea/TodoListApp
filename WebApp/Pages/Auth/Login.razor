@using Microsoft.AspNetCore.Components.Forms
@using TodoListApp.WebApp.Interfaces
@page "/login"
@inject IAuthService AuthService
@inject NavigationManager NavManager

<section id="login-section" class="login-section h-screen overflow-hidden flex items-center justify-center bg-gray-50">
    <div class="login-container">
        <div class="dashboard-preview">
            <img alt="TaskVista dashboard preview"
                 src="https://images.pexels.com/photos/4065894/pexels-photo-4065894.jpeg?auto=compress&amp;cs=tinysrgb&amp;h=650&amp;w=940"
                 class="preview-image" />
        </div>

        <div class="login-card">
            <div class="login-header">
                <h1 class="login-title">Welcome back</h1>
                <p class="login-subtitle">Pick up where you left off.</p>
            </div>

            <EditForm Model="@this" OnValidSubmit="HandleLogin">
                <div class="form-group">
                    <label for="login-email" class="form-label">Email or username</label>
                    <InputText id="login-email" @bind-Value="email"
                               placeholder="riley@example.com"
                               class="form-input my-2" />
                </div>

                <div class="form-group">
                    <label for="login-password" class="form-label">Password</label>
                    <InputText id="login-password" @bind-Value="password"
                               placeholder="••••••••" type="password"
                               class="form-input my-2" />
                </div>

                <button type="submit" class="btn-signin btn btn-primary">Sign in</button>
            </EditForm>

            <div class="login-footer">
                <a href="#forgot"><div class="link-forgot"><span>Forgot password?</span></div></a>

                <p class="signup-text">
                    New to Focusly?
                    <a href="#signup"><div class="dashboard-link-signup"><span>Create an account</span></div></a>
                </p>

                <p class="security-note">
                    Secure, fast access — we keep your work private and synced across devices.
                </p>
            </div>
        </div>
    </div>
</section>

@code {
    private string email = "";
    private string password = "";
    private bool rememberMe = false;

    private async Task HandleLogin()
    {
        var (success, err) = await AuthService.LoginAsync(email, password);

        if (success)
            NavManager.NavigateTo("/");
        else
            Console.WriteLine(err ?? "Login failed");
    }
}
