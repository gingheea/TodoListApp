@using Blazored.LocalStorage
@using Microsoft.AspNetCore.Components.Forms
@using TodoListApp.WebApp.Interfaces
@using TodoListApp.WebApp.Model
@using TodoListApp.WebApp.src.Components
@page "/login"
@inject IAuthService AuthService
@inject NavigationManager NavManager
@inject ILocalStorageService LocalStorage

<main class="page-wrapper"> 
<section id="login-section" class="login-section h-screen overflow-hidden flex items-center justify-center bg-gray-50">
    <div class="login-container">
        <div class="dashboard-preview">
            <img alt="TaskVista dashboard preview"
            src="https://images.pexels.com/photos/4065894/pexels-photo-4065894.jpeg?auto=compress&amp;cs=tinysrgb&amp;h=650&amp;w=940"
            class="preview-image" />
        </div>

        <div class="login-card">
            <div class="login-header">
                <h1 class="login-title">Welcome back</h1>
                <p class="login-subtitle">Pick up where you left off.</p>
            </div>

            <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />

                <div class="form-group mb-3">
                    <label for="login-email" class="form-label">Email or username</label>
                    <InputText id="login-email" @bind-Value="loginModel.EmailOrUsername"
                               placeholder="riley@example.com"
                               class="form-input my-2" />
                    <ValidationMessage For="@(() => loginModel.EmailOrUsername)" class="text-red-500 text-sm" />
                </div>


                <div class="form-group mb-3">
                    <label for="login-password" class="form-label">Password</label>
                    <InputText id="login-password" @bind-Value="loginModel.Password"
                               placeholder="••••••••" type="password"
                               class="form-input my-2" />
                    <ValidationMessage For="@(() => loginModel.Password)" class="text-red-500 text-sm" />
                </div>

                <button type="submit" class="btn-signin btn btn-primary">Sign in</button>

                @if (!string.IsNullOrEmpty(loginError))
                {
                    <p class="text-red-500 text-sm mt-1">@loginError</p>
                }
            </EditForm>

            <div class="login-footer">

                <p class="signup-text">
                    New to Focusly?
                    <a href="/signup"><div class="dashboard-link-signup"><span>Create an account</span></div></a>
                </p>

                <p class="security-note">
                    Secure, fast access — we keep your work private and synced across devices.
                </p>
            </div>
        </div>
    </div>
</section>
 <Footer />
</main>
@code {
    private readonly LoginModel loginModel = new LoginModel();
    private string? loginError;
    

    protected override async Task OnInitializedAsync()
    {
        var token = await LocalStorage.GetItemAsStringAsync("authToken");
        if (!string.IsNullOrEmpty(token))
        {
            NavManager.NavigateTo("/home", true);
        }
    }

    private async Task HandleLogin()
    {
        loginError = null;

        var (success, err) = await AuthService.LoginAsync(loginModel.EmailOrUsername, loginModel.Password);

        if (success)
        {
            NavManager.NavigateTo("/home");
        }
        else
        {
            loginError = ParseError(err);
        }
    }

    private string ParseError(string? err)
    {
        if (string.IsNullOrWhiteSpace(err)) return "Login failed";

        return err switch
        {
            string s when s.Contains("Invalid password", StringComparison.OrdinalIgnoreCase) => "Incorrect password.",
            string s when s.Contains("User not found", StringComparison.OrdinalIgnoreCase) => "User not found.",
            string s when s.Contains("Token not received", StringComparison.OrdinalIgnoreCase) => "Unexpected server error.",
            _ => err
        };
    }
}
